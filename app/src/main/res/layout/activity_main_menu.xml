<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.mainmenu.MainMenu"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Favorite Artists"
        android:id="@+id/lblArtists"
        android:textAlignment="center"
        android:layout_alignEnd="@+id/imageButtonArtists"
        android:layout_below="@+id/imageButtonArtists"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="@dimen/menu_button_width"
        android:layout_height="@dimen/menu_button_width"
        android:id="@+id/imageButtonArtists"
        android:layout_row="0"
        android:layout_column="0"
        android:src="@mipmap/ic_action_artists"
        android:scaleType="fitXY"
        android:background="@color/white"
        android:layout_alignTop="@+id/imageButtonRadio"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentLeft="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Internet Radio"
        android:id="@+id/lblRadio"
        android:layout_below="@+id/imageButtonRadio"
        android:layout_alignEnd="@+id/imageButtonRadio"
        android:layout_alignBottom="@+id/lblArtists"
        android:layout_alignStart="@+id/imageButtonRadio"
        android:textAlignment="center" />

    <ImageButton
        android:layout_width="@dimen/menu_button_width"
        android:layout_height="@dimen/menu_button_width"
        android:id="@+id/imageButtonRadio"
        android:layout_row="0"
        android:layout_column="0"
        android:src="@mipmap/ic_action_radio"
        android:scaleType="fitXY"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Favorite Songs"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_below="@+id/imageButtonRadio"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/lblRadio"
        android:layout_alignStart="@+id/imageButtonSongs" />

    <ImageButton
        android:layout_width="@dimen/menu_button_width"
        android:layout_height="@dimen/menu_button_width"
        android:id="@+id/imageButtonSongs"
        android:layout_row="0"
        android:layout_column="0"
        android:src="@mipmap/ic_action_music"
        android:scaleType="fitXY"
        android:background="@color/white"
        android:layout_above="@+id/textView"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
